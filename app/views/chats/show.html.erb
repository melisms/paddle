<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat with <%= @chat.receiver.username %></title>
  <style>
    /* Global Styles */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f7f7f7;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    h1 {
      text-align: center;
      margin: 20px 0;
      color: #333;
    }

    /* Full-Screen Chat Container */
    #messages {
      flex: 1;
      overflow-y: auto;
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      margin: 0 auto;
      width: 90%;
      max-width: 1000px;
    }

    .message-item {
      margin: 10px 0;
      padding: 15px;
      border-radius: 20px;
      max-width: 70%;
      word-wrap: break-word;
    }

    .message-item.sent {
      background-color: #d1ffd1;
      margin-left: auto;
      text-align: right;
    }

    .message-item.received {
      background-color: #e8e8e8;
    }

    /* Message Input Form */
    .message-form {
      width: 90%;
      max-width: 1000px;
      margin: 20px auto;
      display: flex;
      gap: 10px;
    }

    .message-input {
      flex: 1;
      padding: 15px;
      border: 1px solid #ccc;
      border-radius: 20px;
      font-size: 16px;
    }

    .btn-send {
      padding: 15px 25px;
      background-color: #00796b;
      color: white;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s ease;
    }

    .btn-send:hover {
      background-color: #005a4c;
    }

    /* Full Height Scroll Behavior */
    html, body {
      overflow: hidden; /* Disable page scrolling */
    }

    #messages {
      height: calc(100vh - 160px); /* Adjust based on header and form height */
    }
  </style>
</head>
<body>
  <h1>Chat with <%= @chat.receiver.username %></h1>

  <!-- Messages Container -->
  <div id="messages">
    <% @messages.each do |message| %>
      <div class="message-item <%= message.sender == current_user ? 'sent' : 'received' %>">
        <strong><%= message.sender.username %>:</strong> <%= message.content %>
      </div>
    <% end %>
  </div>

  <!-- Message Input Form -->
  <%= form_with model: @message, url: chat_messages_path(@chat), local: true, html: { class: "message-form" } do |form| %>
    <%= form.text_area :content, placeholder: "Type a message...", class: "message-input", rows: 1 %>
    <%= form.submit "Send", class: "btn-send" %>
  <% end %>

  <script>
    // Scroll to the bottom of the messages container on load
    const messagesDiv = document.getElementById('messages');
    messagesDiv.scrollTop = messagesDiv.scrollHeight;

    // Prevent newline on pressing Enter in the message input
    const messageInput = document.querySelector('.message-input');
    messageInput.addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        e.preventDefault(); // Prevent newline
        document.querySelector('.message-form').submit();
      }
    });
  </script>
</body>
</html>
