<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat with <%= @chat.receiver.username %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f7f7f7;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 {
      margin-top: 20px;
      color: #333;
    }

    #messages {
      width: 100%;
      max-width: 600px;
      height: 400px;
      overflow-y: scroll;
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .message-item {
      margin: 5px 0;
      padding: 10px;
      border-radius: 20px;
      max-width: 70%;
    }

    .message-item.sent {
      background-color: #d1ffd1;
      margin-left: auto;
      text-align: right;
    }

    .message-item.received {
      background-color: #e8e8e8;
    }

    .message-form {
      width: 100%;
      max-width: 600px;
      display: flex;
      gap: 10px;
    }

    .message-input {
      flex: 1;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 20px;
    }

    .btn-send {
      padding: 10px 20px;
      background-color: #00796b;
      color: white;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .btn-send:hover {
      background-color: #005a4c;
    }
  </style>
</head>
<body>
  <h1>Chat with <%= @chat.receiver.username %></h1>

  <div id="messages">
    <% @messages.each do |message| %>
      <div class="message-item <%= message.sender == current_user ? 'sent' : 'received' %>">
        <strong><%= message.sender.username %>:</strong> <%= message.content %>
      </div>
    <% end %>
  </div>

  <%= form_with model: @message, url: chat_messages_path(@chat), local: true, html: { class: "message-form" } do |form| %>
    <%= form.text_area :content, placeholder: "Type a message...", class: "message-input", rows: 1 %>
    <%= form.submit "Send", class: "btn-send" %>
  <% end %>

  <script>
  
    const messagesDiv = document.getElementById('messages');
    messagesDiv.scrollTop = messagesDiv.scrollHeight;


    const messageInput = document.querySelector('.message-input');
    messageInput.addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        e.preventDefault(); // Prevent newline
        document.querySelector('.message-form').submit();
      }
    });
  </script>
</body>
</html>


