<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat with <%= @chat.receiver.username %></title>
  <style>
    /* Global Styles */
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    h1 {
      text-align: center;
      margin: 20px 0;
      color: #004d40; /* Dark green for heading */
      font-size: 32px;
    }

    /* Full-Screen Chat Container */
    #messages {
      flex: 1;
      overflow-y: auto;
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin: 0 auto;
      width: 90%;
      max-width: 900px;
    }

    .message-item {
      margin: 15px 0;
      padding: 15px;
      border-radius: 20px;
      max-width: 70%;
      word-wrap: break-word;
      font-size: 16px;
    }

    .message-item.sent {
      background-color: #c8e6c9; /* Light green for sent messages */
      margin-left: auto;
      text-align: right;
      color: #004d40;
    }

    .message-item.received {
      background-color: #e8f5e9; /* Light greenish gray for received messages */
      color: #333;
    }

    /* Message Input Form */
    .message-form {
      width: 90%;
      max-width: 900px;
      margin: 20px auto;
      display: flex;
      gap: 10px;
    }

    .message-input {
      flex: 1;
      padding: 15px;
      border: 1px solid #ccc;
      border-radius: 20px;
      font-size: 16px;
      background-color: #fafafa;
      color: #333;
      resize: none;
      transition: border-color 0.3s ease;
    }

    .message-input:focus {
      border-color: #00796b; /* Focus color */
      outline: none;
    }

    .btn-send {
      padding: 15px 25px;
      background-color: #00796b; /* Teal green for the send button */
      color: white;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s ease;
    }

    .btn-send:hover {
      background-color: #004d40; /* Darker green for hover */
    }

    /* Full Height Scroll Behavior */
    html, body {
      overflow: hidden; /* Disable page scrolling */
    }

    #messages {
      height: calc(100vh - 160px); /* Adjust based on header and form height */
    }

    /* Custom Scrollbar */
    #messages::-webkit-scrollbar {
      width: 10px;
    }

    #messages::-webkit-scrollbar-thumb {
      background-color: rgba(0, 0, 0, 0.15);
      border-radius: 12px;
    }

    /* Button and Input Field Animation */
    .btn-send:focus, .message-input:focus {
      transition: all 0.3s ease;
      transform: scale(1.05);
    }
    /* Hide the default file input */
    .hidden-file-input {
      display: none;
    }

    /* Style the custom button */
    .upload-btn {
      display: inline-block;
      background-color: #00796b; /* Teal green */
      color: white;
      padding: 10px 20px;
      border-radius: 20px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      text-align: center;
    }

    .upload-btn:hover {
      background-color: #004d40; /* Darker green */
    }

    .image-preview {
      margin-top: 10px;
      text-align: center;
      border: 1px dashed #ccc;
      border-radius: 10px;
      padding: 10px;
    }

    .image-preview img {
      max-width: 50%;
      max-height: 50px;
      margin-top: 5px;
      border-radius: 10px;
    }
  </style>
</head>
<body>
  <h1>Chat with <%= @chat.receiver.username %></h1>

  <!-- Messages Container -->
  <div id="messages">
    <% @messages.each do |message| %>
      <div class="message-item <%= message.sender == current_user ? 'sent' : 'received' %>">
        <strong><%= message.sender.username %>:</strong> <%= message.content %>
        <% if message.image.attached? %>
          <div>
            <%= image_tag url_for(message.image), alt: "Message image", class: "chat-image" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Message Input Form -->
  <%= form_with model: @message, url: chat_messages_path(@chat), local: true, html: { class: "message-form", multipart: true } do |form| %>
    <%= form.text_area :content, placeholder: "Type a message...", class: "message-input", rows: 1 %>
    <div class="custom-file-upload">
      <label for="file-upload" class="upload-btn">ðŸ“Ž</label>
      <%= form.file_field :image, id: "file-upload", accept: "image/*", class: "hidden-file-input" %>
    </div>
    <div id="image-preview" class="image-preview">
      <p>No image selected</p>
    </div>
    <%= form.submit "Send", class: "btn-send" %>
  <% end %>

  <script>
    // Scroll to the bottom of the messages container on load
    const messagesDiv = document.getElementById('messages');
    messagesDiv.scrollTop = messagesDiv.scrollHeight;

    // Prevent newline on pressing Enter in the message input
    const messageInput = document.querySelector('.message-input');
    messageInput.addEventListener('keypress', function (e) {
      if (e.key === 'Enter' && !e.shiftKey) {  // Allow Shift + Enter for new line
        e.preventDefault(); // Prevent form submission
        document.querySelector('.message-form').submit();
      }
    });

    document.getElementById('file-upload').addEventListener('change', function () {
      const previewContainer = document.getElementById('image-preview');
      const file = this.files[0];

      // Clear previous content
      previewContainer.innerHTML = '';

      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          const img = document.createElement('img');
          img.src = e.target.result;
          img.alt = "Image Preview";
          previewContainer.appendChild(img);
        };
        reader.readAsDataURL(file);
      } else {
        previewContainer.innerHTML = '<p>No image selected</p>';
      }
    });
  </script>
</body>
</html>
