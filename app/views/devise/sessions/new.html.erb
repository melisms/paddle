<%# Düzenlenmiş tam HTML kodu %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        /* Genel Sayfa Stili */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f7f7f7;
        }

        /* Ana Konteyner Stili */
        .container {
            display: flex;
            height: 700px;
            width: 1450px;
            border: 1px solid white;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Sol Bölüm Stili */
        .left-section {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: rgb(167, 224, 200);
        }

        .left-section .alert {
            background-color: #ffcccc;
            color: #b30000;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
            text-align: center;
        }


        .left-section .field {
            margin-bottom: 15px;
            width: 100%;
            position: relative;
            text-align: left;
        }


        .left-section .field i{
            position: absolute;
            left: -30px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            color: #aaa;
        }

        .left-section .field label {
            display: block; /* Yazıyı kutunun üstüne taşır */
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .left-section .field input {
            width: 100%;
            padding: 10px;
            padding-left: 35px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        .left-section .remember-me {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-top: 10px;
        }

        .left-section .remember-me input {
            margin-right: 5px;
        }

        .left-section .actions {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            width: 100%;
        }

        .left-section .actions button {
            text-align: center;
            padding: 12px;
            border: none;
            border-radius: 12px; /* Daha belirgin köşe yumuşatması */
            font-size: 16px;
            font-weight: bold;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease; /* Yumuşak geçiş ve transform ekledim */
        }

        .left-section .actions .login-btn {
            background-color: #28a745;
            border-radius: 8px;
        }

        .left-section .actions .login-btn:hover {
            background-color: #218838;
            transform: scale(1.05); /* Hover durumunda buton biraz büyüsün */
        }

        .left-section .signup-btn{
            text-align: center;
            background-color: #28a745;
            border-radius: 8px;
        }

        .left-section .signup-btn:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

        /* Sağ Bölüm Stili */
        .right-section {
            flex: 1;
            background-color: #eaeaea;
        }

        .right-section img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-section">
            <!-- Tek bir hata mesajı göster -->
            <% if flash[:alert] || flash[:notice] %>
                <div class="alert">
                    <%= flash[:alert] || flash[:notice] %>
                </div>
            <% end %>

            <!-- Giriş Formu -->
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                    <label for="email">Email</label>
                    <div style="position: relative;">
                        <i class='bx bx-user' style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); font-size: 20px; color: #aaa;"></i>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>
                </div>

                <div class="field">
                    <label for="password">Password</label>
                    <div style="position: relative;">
                        <i class='bx bx-lock' style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); font-size: 20px; color: #aaa;"></i>
                        <%= f.password_field :password, autocomplete: "current-password" %>
                    </div>
                </div>

                <% if devise_mapping.rememberable? %>
                    <div class="remember-me">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                    </div>
                <% end %>

                <div class="actions">
                    <%= f.submit "Log in", class: "login-btn" %>
                    <%= link_to "Sign up", new_registration_path(resource_name), class: "signup-btn" %><br />
                </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>

        <div class="right-section">
            <img src="<%= asset_path('dogs.jpg') %>" alt="Dog Image">
        </div>
    </div>
</body>
</html>
