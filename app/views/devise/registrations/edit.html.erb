    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  .btn-submit {
    background-color: #00796b;
    color: white;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 5px;
  }

  .btn-submit:hover {
    background-color: #004d40;
  }

  .btn-cancel {
    background-color: #f44336;
    color: white;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 5px;
  }

  .btn-cancel:hover {
    background-color: #da190b;
  }

  .back-link {
    display: inline-block;
    margin-top: 15px;
    padding: 10px 20px;
    text-decoration: none;
    background-color: #00796b;
    color: white; 
    font-size: 16px; 
    font-weight: bold; 
    border-radius: 8px;
    transition: background-color 0.3s ease, transform 0.2s ease;
    text-align: center;
}

