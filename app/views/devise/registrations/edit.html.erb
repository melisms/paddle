  }

  .search-input {
    width: 100%;
    padding: 10px 15px;
    border: 1px solid #ddd;
    border-radius: 50px 0 0 50px;
    font-size: 16px;
    outline: none;
  }

  .search-button {
    background-color: #005b4f;
    border: none;
    color: white;
    font-size: 18px;
    padding: 0 15px;
    border-radius: 0 50px 50px 0;
    cursor: pointer;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .search-button:hover {
    background-color: #004239;
  }

  .search-button:focus {
    outline: none;
  }
</style>
