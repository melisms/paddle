<h1 class="text-center">Search Content</h1>
<%= render 'search/form'%>

<div class="container">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th><%= sort_link(@query, :body, "Posts") %></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.body.truncate_words(25) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>