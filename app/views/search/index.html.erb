    text-align: left;
    padding: 10px;
    font-size: 16px;
  }

  .table td {
    background-color: #e0f2f1;
    color: #004d40;
    padding: 10px;
    font-size: 14px;
  }

  .table tr:hover {
    background-color: #b2dfdb;
  }

  .table-striped tbody tr:nth-of-type(odd) {
    background-color: #e0f7fa;
  }

  .table-dark {
    border: 1px solid #004d40;
  }

  .table-striped tbody tr:nth-of-type(even):hover {
    background-color: #a7d7c5;
  }

  @media (max-width: 768px) {
    .container {
      padding: 10px;
    }

    .table th, .table td {
      font-size: 12px;
    }
  }

  .part {
    width: 100%;
    background-color: #00796b;
    color: rgb(0, 0, 0);
    padding: 15px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    height: 70px;
    box-sizing: border-box;
  }
   
  .logo {
    flex: 1;
    font-size: 24px;
    font-weight: bold;
    letter-spacing: 2px;
  }

  .search-bar {
    flex: 3;
    justify-content: center;
    height: 100%;
  }

  .search-form {
    display: flex;
    align-items: center;
    width: 100%;
    max-width: 800px;
    position: relative;
  }

  .search-input {
    width: 100%;
    padding: 10px 15px;
    border: 1px solid #ddd;
    border-radius: 50px 0 0 50px;
    font-size: 16px;
    outline: none;
  }

  .search-button {
    background-color: #005b4f;
    border: none;
    color: white;
    font-size: 18px;
    padding: 0 15px;
    border-radius: 0 50px 50px 0;
    cursor: pointer;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .search-button:hover {
    background-color: #004239;
  }

  .search-button:focus {
    outline: none;
  }

  .posts-feed {
    display: flex;
    flex-direction: column;
    gap: 20px; 
  }


  .post {
    background-color: #f8f9fa; 
    border: 1px solid #ddd; 
    border-radius: 8px; 
    padding: 16px; 
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
    transition: transform 0.2s, box-shadow 0.2s; 
  }


  .post:hover {
    transform: translateY(-5px); 
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15); 
  }

  .post-header {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 8px;
  }


  .post-body {
    font-size: 16px;
    color: #555;
    line-height: 1.5; 
  }

  .post-time {
  font-size: 0.8em; 
  color: #999; 
  margin-top: 10px; 
  font-weight: normal; 
}

  
  .hashtag {
    color: #007bff; 
    text-decoration: none; 
  }

  .hashtag:hover {
    text-decoration: underline; 
  }

  
  .post-link {
    display: block; 
    text-decoration: none; 
    color: inherit; 
  }

  .post-photo img {
  width: 400px;
  height: 300px;
  object-fit: cover; 
}


.username-wrapper {
  display: flex;
  align-items: center;
}

.profile-picture {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 10px;
}

.profile-picture-small {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.profile-picture-placeholder {
  width: 30px;
  height: 30px;
  background-color: gray;
  border-radius: 50%;
}

</style>
