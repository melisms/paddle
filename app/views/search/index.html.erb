<h1 class="text-center">Search Content</h1>
<div class="part">
  <div class="logo">
    <%= link_to 'Paddle', root_path, style: 'text-decoration: none; color: white;' %>
  </div>
  <div class="search-bar">
    <%= search_form_for(@query, url: search_path, method: :get, class: 'search-form') do |f| %>
      <%= f.search_field :body_or_user_username_cont_any, 
        placeholder: "Search posts or users...", 
        class: "search-input" %>
      <%= f.submit "🔍", class: "search-button" %>
    <% end %>
  </div>
</div>

<div class="container">
  <h1 class="search-header">
    Search Results for "<%= params.dig(:q, :body_or_user_username_cont_any) %>" 
  </h1>

  <% if @posts.present? %>
    <div class="posts-feed" id="postsFeed">
      <% @posts.each do |post| %>
        <div class="post">
          <%= link_to post, class: "post-link" do %>
            <div class="post-header">
              <div class="username-wrapper">
  
                <div class="profile-picture">
                  <% if post.user && post.user.profile_picture.attached? %>
                    <%= image_tag url_for(post.user.profile_picture), class: "profile-picture-small" %>
                  <% else %>
                    <div class="profile-picture-placeholder"></div>
                  <% end %>
                </div>
                <%= post.user.username %>
              </div>
            </div>

            <div class="post-body">
              <%= simple_format(post.body.gsub(/#\w+/) do |hashtag| 
                    link_to hashtag, tag_path(name: hashtag[1..]), class: "hashtag"
                  end.html_safe) %>

              <% if post.photo.attached? %>
                <div class="post-photo">
                  <%= image_tag(post.photo, class: "post-image") %>
                </div>
              <% end %>

              <div class="post-time">
                <%= post.created_at.strftime('%b %d, %Y %H:%M') %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No posts found.</p>
  <% end %>
</div>



<style>
  .layout {
    display: flex;
    flex-grow: 1; 
    width: 100%; 
    height: 100%; 
    box-sizing: border-box;
  }

   .search-header {
    text-align: center;
    font-size: 26px;
    color: #264653;
    margin: 30px auto 30px;
    font-weight: bold;
    text-transform: capitalize;
    letter-spacing: 1.2px;
    background-color: #e9f5f3;
    padding: 12px 18px;
    border-radius: 10px;
    width: fit-content;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
  }

  .main-content {
    flex-grow: 1;
    background-color: #f4f6f8;
    padding: 20px;
    padding-top: 80px; 
