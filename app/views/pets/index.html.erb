<h1 class="page-title">üêæ Pets Available for Adoption üêæ</h1>

<div class="actions">
  <%= link_to "Add a New Pet", new_pet_path, class: "btn btn-primary add-pet-button" %>
</div>

<div class="filter-form">
  <%= form_with(url: pets_path, method: :get, local: true) do %>
    <%= label_tag :location, "Filter by Location", class: "filter-label" %>
    <%= select_tag :location, options_for_select(Pet::CITIES, params[:location]), include_blank: "All Cities", class: "filter-select" %>
    <%= submit_tag "Filter", class: "filter-button" %>
  <% end %>
</div>

<div class="pets-list">
  <% @pets.each do |pet| %>
    <div class="pet-card">
      <%= image_tag pet.image, class: "pet-image" if pet.image.attached? %>
      <div class="pet-info">
        <h2 class="pet-name"><%= pet.name %></h2>
        <p class="pet-details"><strong>Location:</strong> <%= pet.location %></p>
        <p class="pet-details"><strong>Age:</strong> <%= pet.age %></p>
        <p class="pet-details"><strong>Type:</strong> <%= pet.pet_type %> | <%= pet.breed %></p>
        <p class="pet-description"><strong>Description:</strong> <%= pet.description %></p>
        <%= link_to "Adopt Me ‚ù§Ô∏è", pet_path(pet), class: "adopt-button" %>
      </div>
    </div>

    
  <% end %>
</div>
<%= link_to "Back", root_path, class: "back-link" %>

