<h1 class="pet-name"><%= @pet.name %></h1>

<div class="pet-details">
  <div class="details-container">
    <div class="pet-info">
      <p><strong>Location:</strong> <%= @pet.location %></p>
      <p><strong>Age:</strong> <%= @pet.age %></p>
      <p><strong>Type:</strong> <%= @pet.pet_type %></p>
      <p><strong>Breed:</strong> <%= @pet.breed %></p>
      <p><strong>Description:</strong> <%= @pet.description %></p>
      <p><strong>Owner:</strong> <%= @owner.username %></p>
    </div>
    <% if @pet.image.attached? %>
      <div class="pet-image">
        <%= image_tag @pet.image, alt: @pet.name, class: "img-fluid shadow-lg" %>
      </div>
    <% end %>
  </div>

  <div class="action-buttons">
    <%= button_to "Chat with Owner", chats_path(chat: { user_id: @owner.id }), method: :post, class: "btn btn-chat" %>
    <br>
    <%= link_to 'Back to Pets List', pets_path, class: "btn btn-back" %>
  </div>
</div>
<%= link_to "Back", pets_path, class: "back-link" %>

<style>
  .pet-name {
    text-align: center;
    font-size: 36px;
    color: #2C6B5F;
    margin-bottom: 20px;
    font-weight: bold;
    text-transform: capitalize;
    letter-spacing: 1px;
  }

  .details-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 20px;
  }

  .pet-info {
    flex: 1;
    font-size: 18px;
    color: #333;
  }

  .pet-info p {
    margin-bottom: 15px;
  }

  .pet-info p strong {
    color: #2C6B5F;
    font-weight: bold;
  }

  .pet-image {
    flex: 0 0 300px; /* Resim genişliği sabit */
    text-align: center;
  }

  .img-fluid {
    width: 300px;
    height: 300px;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .pet-details {
    max-width: 900px;
    margin: 30px auto;
    padding: 30px;
    background-color: #f7f9f9;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    font-family: 'Roboto', sans-serif;
  }

  .action-buttons {
    text-align: center;
    margin-top: 20px;
  }

  .btn-chat {
    background-color: #2C6B5F;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    font-size: 16px;
    transition: all 0.3s ease;
  }

  .btn-chat:hover {
    background-color: #1e4f42;
  }

  .btn-back {
    background-color: #f1f1f1;
    color: #333;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    font-size: 16px;
    transition: all 0.3s ease;
  }

  .btn-back:hover {
    background-color: #ddd;
    color: #2C6B5F;
  }

  .back-link {
    position: fixed;
    bottom: 20px;
    left: 20px;
    background-color: #00796b;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    font-size: 16px;
  }

  .back-link:hover {
    background-color: #004d40;
  }
</style>
