<% if current_user %>
   <div class="menu">
        <a href="#">🏠 Home</a>
        <%= link_to "🐾 Profile", profile_path, class: 'auth' %>
        <%= link_to "💌 Messages", chats_path, class: 'auth' %>
        <%= link_to "⚙️ Settings", edit_user_registration_path, class: 'auth' %>
        <%= button_to "🔓 Logout", destroy_user_session_path, method: :delete, class: 'auth-button' %>
    </div>
<% else %>
    <div class="menu">
        <a href="#">🏠 Home</a>
        <a href="#">🐾 Profile</a>
        <a href="#">💌 Messages</a>
        <a href="#">⚙️ Settings</a>
    </div>
    <div class="auth-buttons">
        <button class="auth-button" onclick="window.location.href='/users/sign_up'">Sign Up</button>
        <button class="auth-button" onclick="window.location.href='/users/sign_in'">Log In</button>
    </div>
<% end %>

<style>
.auth-buttons {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
}
</style>
