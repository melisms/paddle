<h1 class="tag-header">#<%= @tag.name %> - Trending Posts</h1>

<% @posts.each do |post| %>
  <div class="post-card">
    <h3 class="username"><%= post.user.username %></h3>
    <p class="post-body"><%= post.body %></p>
  </div>
<% end %>

<style>
  body {
    font-family: 'Roboto', sans-serif;
    background-color: #f5f5f5;
    margin: 0;
    padding: 0;
  }


  .tag-header {
    text-align: center;
    font-size: 26px;
    color: #264653;
    margin: 20px auto 30px;
    font-weight: bold;
    text-transform: capitalize;
    letter-spacing: 1.2px;
    background-color: #e9f5f3;
    padding: 12px 18px;
    border-radius: 10px;
    width: fit-content;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
  }

  .post-card {
    background-color: #ffffff;
    padding: 20px;
    margin: 20px auto;
    max-width: 750px;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }


  .username {
    font-size: 20px;
    color: #2A9D8F;
    margin-bottom: 8px;
    font-weight: bold;
    letter-spacing: 0.5px;
  }


  .post-body {
    font-size: 16px;
    color: #4a4a4a;
    line-height: 1.7;
    word-wrap: break-word;
  }

  
 
  @media (max-width: 768px) {
    .tag-header {
      font-size: 22px;
      padding: 10px 16px;
    }

    .post-card {
      padding: 16px;
      margin: 15px;
    }

    .username {
      font-size: 18px;
    }

    .post-body {
      font-size: 14px;
    }
  }
</style>
