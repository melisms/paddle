<div class="part">
    <div class="logo">
      <%= link_to 'Paddle', root_path, style: 'text-decoration: none; color: white;' %>
    </div>
    <div class="search-bar">
      <%= search_form_for(@query, url: search_path, method: :get, class: 'search-form') do |f| %>
        <%= f.search_field :body_i_cont_any,
          placeholder: "Search...",
          class: "search-input" %>
        <%= f.submit "ðŸ”", class: "search-button" %>
      <% end %>
    </div>
</div>

<h1 class="tag-header">#<%= @tag.name %> - Trending Posts</h1>

<% @posts.each do |post| %>
  <div class="post-card">
    <h3 class="username"><%= post.user.username %></h3>
    <p class="post-body"><%= post.body %></p>
    <div class="post-actions">
      <button class="like-button">Like</button>
      <button class="comment-button">Comment</button>
    </div>
  </div>
<% end %>

<style>

  body {
    font-family: 'Roboto', sans-serif;
    background-color: #f5f5f5;
    margin: 0;
    padding: 0;
  }
.part {
   width: 100%;
   background-color: #00796b;
   color: rgb(0, 0, 0);
   padding: 15px 20px;
   display: flex;
   justify-content: space-between;
   align-items: center;
   position: fixed;
   top: 0;
   left: 0;
   z-index: 10;
   height: 70px;
   box-sizing: border-box;
 }
 .logo {
   flex: 1;
   font-size: 24px;
   font-weight: bold;
   letter-spacing: 2px;
 }
 .search-bar {
   flex: 3;
   justify-content: center;
   height: 100%;
 }
 .search-form {
   display: flex;
   align-items: center;
   width: 100%;
   max-width: 800px;
   position: relative;
 }
 .search-input {
   width: 100%;
   padding: 10px 15px;
   border: 1px solid #ddd;
   border-radius: 50px 0 0 50px;
   font-size: 16px;
   outline: none;
 }
 .search-button {
   background-color: #005b4f;
   border: none;
   color: white;
   font-size: 18px;
   padding: 0 15px;
   border-radius: 0 50px 50px 0;
   cursor: pointer;
   height: 100%;
   display: flex;
   align-items: center;
   justify-content: center;
   transition: background-color 0.3s ease;
 }
 .search-button:hover {
   background-color: #004239;
 }
 .search-button:focus {
   outline: none;
 }


  .tag-header {
    text-align: center;
    font-size: 26px;
    color: #264653;
    margin: 80px auto 30px;
    font-weight: bold;
    text-transform: capitalize;
    letter-spacing: 1.2px;
    background-color: #e9f5f3;
    padding: 12px 18px;
    border-radius: 10px;
    width: fit-content;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
  }

  .post-card {
    background-color: #ffffff;
    padding: 20px;
    margin: 20px auto;
    max-width: 750px;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }

  .username {
    font-size: 20px;
    color: #2A9D8F;
    margin-bottom: 8px;
    font-weight: bold;
    letter-spacing: 0.5px;
  }


  .post-body {
    font-size: 16px;
    color: #4a4a4a;
    line-height: 1.7;
    word-wrap: break-word;
  }

  @media (max-width: 768px) {
    .tag-header {
      font-size: 22px;
      padding: 10px 16px;
    }

    .post-card {
      padding: 16px;
      margin: 15px;
    }

    .username {
      font-size: 18px;
    }

    .post-body {
      font-size: 14px;
    }

    .search-bar {
      margin-left: 10px;
    }
  }
</style>
